<div class="govuk-width-container">
  <main class="govuk-main-wrapper" role="main">

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Sign in</h1>
        <div id="notice" class="govuk-error-message">
          <%= flash[:alert]%>
        </div>
        <br/>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: "off" }) do |f| %>
          <div class="govuk-form-group">
            <h1 class="govuk-label-wrapper">
              <%= f.label :email, class: "govuk-label govuk-label", for: "email_address"%>
            </h1>
            <%= f.email_field :email, autofocus: true, ariadescribed_by: "input-email_address", class: "govuk-input" %>
          </div>

          <div class="govuk-form-group">
            <h1 class="govuk-label-wrapper">
              <%= f.label :password, class: "govuk-label govuk-label", for: "input_password" %>
            </h1>
            <%= f.password_field :password, ariadescribed_by: "input-password", class: "govuk-input" %>
          </div>
          <br/>
          <% if devise_mapping.rememberable? %>
            <div class="govuk-form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <br/>

          <div class="actions">
            <%= f.submit "Log in", :class => "govuk-button" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </main>
</div>



