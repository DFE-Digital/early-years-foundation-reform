<nav class="app-subnav">
  <% ContentPage.top_level.each do |top_level| %>
    <a class="<%= subnav_link_css_classes(top_level) %>" href="<%= content_path(top_level.slug, '') %>">
      <h4 class="app-subnav__theme"><%= top_level.title %></h4>
    </a>
    <ul class="app-subnav__section ">
      <% top_level.children.each do |child| %>
        <li class=" app-subnav__section-item ">
          <a class="<%= subnav_link_css_classes(child) %>" href="<%= content_path(child.slug, '') %>"><%= child.title %></a>
        </li>
      <% end %>
    </ul>
  <% end %>
</nav>
